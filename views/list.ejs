<%- include("header"); -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% for (var i=0; i < newItem.length; i++) { %>
  <div class="item">
    <input type="checkbox" />
    <p><%= newItem[i] %></p>
  </div>
  <% } %>
  <!-- passing data from webpage to server -->
  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      id="inputText"
      placeholder="New item"
      autocomplete="off"
    />
    <button type="submit" name="button" value="<%= listTitle %>">+</button>
  </form>
</div>
<%- include("footer"); -%>